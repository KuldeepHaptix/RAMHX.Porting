@using RAMHX.CMS.DataAccess.Extension;
@using RAMHX.CMS.Web;

@{
    // var jobs = new HaptiX.CorpWeb.RAMHXWeb.Repos.JobRepo().GetJobs();
    //Model = jobs;
    Layout = null;
    ViewBag.Title = "Rooms";

    var Rooms = SiteContext.CurrentPage.cms_SubPages.ToList();
}
<div id="content">
    <div class="container">
        <div class="row room-list">

            @for (int i = 0; i < Rooms.Count; i++)
            {
                 <!-- room begin -->
                <div class="col-md-4">
                    <div class="room-item item">
                        <div class="overlay">
                            <a href="#">
                                <h1>@Rooms[i].PageName</h1>
                            </a>
                            <div class="desc">
                                @Rooms[i].FieldValue("RoomShortDesc")
                                <a href="@Rooms[i].FullPageUrl" class="btn-border">View Details</a>
                            </div>
                        </div>
                        <img src="@Rooms[i].FieldValue("RoomThumb")" alt="@Rooms[i].PageName" />
                    </div>
                </div>
                <!-- room close -->
            }

        </div>
    </div>
</div>

