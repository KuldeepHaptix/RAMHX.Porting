@model RAMHX.CMS.DataAccess.AspNetRole

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Roles</h2>

@if (Model.Name.ToLower() != "admin")
{
    <h3>Are you sure you want to delete this "@Html.DisplayFor(model => model.Name)" role?</h3>
    <div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                
            </div>
        }
    </div>
}
else
{
    <h3>You cannot delete default/Built in roles - "@Html.DisplayFor(model => model.Name)" role.</h3>
}

@Html.ActionLink("Back to List", "Index")