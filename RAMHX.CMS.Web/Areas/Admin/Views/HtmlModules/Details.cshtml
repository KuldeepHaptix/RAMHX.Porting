@model RAMHX.CMS.DataAccess.HtmlModule

@{
    ViewBag.Title = "Details";
}
<section class="content-header">
    <h1>
        Contents
        <small>Maintain Contents</small>
    </h1>

    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Administration</a></li>
        <li><a href="#">Contents</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div>
                        <h4>Page content details</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                Name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.HtmlModuleName) - @Html.DisplayFor(model => model.HtmlModuleCode)
                            </dd>

                            <dt>
                                Description
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.HtmlModuleDescription)
                            </dd>

                            <dt>
                                Page Reference
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.PageName)
                            </dd>
                            <dt>
                                HTML Preview
                            </dt>

                            <dd>
                                @Html.Raw(Model.HtmlModuleHTML)
                            </dd>
                        </dl>
                    </div>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.HTMLModuleId }) |
                        @Html.ActionLink("Back to List", "Index", null, new { @id = "goback" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/Areas/Admin/Assets/js/HtmlModule.Create.js"></script>
}
