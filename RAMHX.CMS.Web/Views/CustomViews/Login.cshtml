@{
    Layout = null;
}
<section>
    <div class="sub-header sub-header-1 sub-header-contact fake-position">
        <div class="sub-header-content">
            <h2 class="text-cap white-text">Login</h2>

            <ol class="breadcrumb breadcrumb-arc text-cap">
                <li><a href="/">Home</a></li>
                <li>Login</li>
            </ol>
        </div>
    </div>
</section>

<section class="padding">
    <div class="container">
        <div class="row">
            <div class="contact-warp">
                <div class="col-md-6 ">
                    <div class="left-contact" id="divLogin">
                        <h3 class="text-cap">Login</h3>
                        <div class="row">
                            <div class="hide" id="drefLoginError">
                                <div class="form-group">
                                    <div class="">
                                        <label class="control-label alert alert-danger alert-dismissible"><span id="spnLoginError"></span></label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-sm-12" id="dUsername">
                                <input class="form-control" id="txtUsername" name="txtUsername" placeholder="Enter Username" type="text" isrequired="1" errorspan="sUsernameError" divcontainer="dUsername" defaultvalue="" />
                                <span class="help-block hide error" id="sUsernameError">Please Enter Your Username</span>
                            </div>

                            <div class="form-group col-sm-12" id="dPassword">
                                <input type="password" id="txtPassword" placeholder="Password" class="form-control input" isrequired="1" errorspan="sPasswordError" divcontainer="dPassword" defaultvalue="" />
                                <span class="help-block hide error" id="sPasswordError">Please Enter Your Password</span>
                            </div>
                        </div>
                        <button class="ot-btn btn-main-color btn-long btn-submit text-cap" id="btnLogin">Submit</button>
                    </div>
                    <div class="col-lg-12">
                        <div class="col-lg-6">
                            <a href="/forgotpwd">Forgot Password?</a>
                        </div>
                        <div class="col-lg-6 form-group">
                            <input type="checkbox" name="Name" class="icheckbox_flat-aero" id="chkRemember"/>Remember me
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/distfrontend/js/Login.js"></script>