@{
    Page.Title = "Title goes here";
    Layout = null;

}

<section class="content-header">
    <h1>
        FAQ's Master
        <small>Maintain FAQ's</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">FAQ's</a></li>
        <li><a href="#">FAQ's Master</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="">
                        <button type="button" id="btnAddNew" class="btn btn-link">
                            Add New FAQ
                        </button>
                    </div>
                    <div>&nbsp;</div>
                    <div id='jqxWidget'>
                        <div id="jqxgrid"></div>
                        <div id="popupWindow" class="hide">
                            <div>Package Details - Edit</div>
                            <div style="overflow: auto;">
                                <div class="callout callout-danger hide errorDiv">
                                    <h4> Please Correct Below Error(s)</h4>
                                    <p id="perror"></p>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-4">

                                        <div class="form-group">
                                            <div id="dQuestion">
                                                <label class="control-label">Question</label>
                                                <input type="text" name="Name" class="form-control" id="txtQuestion" errorspan="sQuestion" isrequired="1" data-error="Please enter Question." divcontainer="dQuestion" defaultvalue="" />
                                                <span class="help-block hide error" id="sQuestion">Please Enter Question</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div id="dCategoryId">
                                                <label class="control-label">Category</label>
                                                <select type="text" name="CategoryId" class="form-control" id="ddlCategoryId" isrequired="1" data-error="Please enter Category." errorspan="sCategoryId" divcontainer="dCategoryId"
                                                        defaultvalue="0" />
                                                <span class="help-block hide error" id="sCategoryId">Please Select Category</span>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-lg-8">
                                        <div id="dAnswer">
                                            <label class="control-label">Answer</label>
                                            <textarea rows="4" cols="40" class="form-control" id="txtAnswer" errorspan="sAnswer" data-error="Please enter Answer." divcontainer="dAnswer"
                                                      defaultvalue="">
                                    </textarea>
                                            <span class="help-block hide error" id="sAnswer">Please Enter Answer</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div><div class="clearfix">&nbsp;</div>
                                <div class="form-group actionBar">
                                    <input class="btn crud-submit btn-success" type="button" id="btnSave" value="Save" />
                                    <input id="btnCancel" class="btn crud-submit btn-danger" type="button" value="Cancel" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row hide">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div>&nbsp;</div>
                    <div id='jqxWidget'>
                        <div id="productJqxgrid"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<script src="~/distadmin/js/AppAdmin/Masters/FAQMaster.js?_=@DateTime.Now.Ticks"></script>
<script src="/areas/admin/assets/Plugins/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('txtAnswer');
</script>