@{
    Layout = null;
}

<section class="content-header">
    <h1>
        Sliders Category
        <small>Maintain  Sliders</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Masters</a></li>
        <li><a href="#"> Sliders Category</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="">
                        <button type="button" id="btnAddNew" class="btn btn-link">
                            Add New Sliders Category
                        </button>
                    </div>
                    <div>&nbsp;</div>
                    <div id='jqxWidget'>
                        <div id="jqxgrid"></div>
                        <div id="popupWindow" class="hide">
                            <div>Sliders Category Details - Edit</div>
                            <div style="overflow: auto;">
                                <div class="callout callout-danger hide errorDiv">
                                    <h4> Please Correct Below Error(s)</h4>
                                    <p id="perror"></p>
                                </div>
                                <div class="form-group">
                                    <div id="dSlideCode">
                                        <label class="control-label">Code</label>
                                        <input type="text" name="Name" class="form-control" id="txtSliderCode" isrequired="1" data-error="Please enter Package Code." errorspan="sSliderCode" divcontainer="dSlideCode" defaultvalue="" />
                                        <span class="help-block hide error" id="sSliderCode">Please Enter Code</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div id="dSlideCat">
                                        <label class="control-label">Name</label>
                                        <input type="text" name="Name" class="form-control" id="txtSliderName" isrequired="1" data-error="Please enter Package Category." errorspan="sSliderCat" divcontainer="dSlideCat" defaultvalue="" />
                                        <span class="help-block hide error" id="sSliderCat">Please Enter Category</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Status</label>
                                    <div>
                                        <input type="checkbox" name="Active" value="true" id="chkActive" />
                                        <label class="control-label">Active</label>
                                    </div>
                                </div>
                                <div class="form-group actionBar">
                                    <input class="btn crud-submit btn-success" type="button" id="btnSave" value="Save" />
                                    <input id="btnCancel" class="btn crud-submit btn-danger" type="button" value="Cancel" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/distadmin/js/AppAdmin/Masters/SliderCategories.js?_=@DateTime.Now.Ticks"></script>
