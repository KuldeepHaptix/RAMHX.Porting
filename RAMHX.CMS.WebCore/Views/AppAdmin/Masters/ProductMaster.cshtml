
@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Product Master
        <small>Maintain Products</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Products</a></li>
        <li><a href="#">Product Master</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="">
                        <button type="button" id="btnAddNew" class="btn btn-link">
                            Add New Product
                        </button>
                    </div>
                    <div>&nbsp;</div>
                    <div id='jqxWidget'>
                        <div id="jqxgrid"></div>
                        <div id="popupWindow" class="hide">
                            <div>Product Details - Edit</div>
                            <div style="overflow: auto;">
                                <div class="callout callout-danger hide errorDiv">
                                    <h4> Please Correct Below Error(s)</h4>
                                    <p id="perror"></p>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-4">

                                        <div class="form-group">
                                            <div id="dProdName">
                                                <label class="control-label">Name</label>
                                                <input type="text" name="Name" class="form-control" id="txtProdName" errorspan="sProdName" isrequired="1" data-error="Please enter Product name." divcontainer="dProdName" defaultvalue="" />
                                                <span class="help-block hide error" id="sProdName">Please Enter Product Name</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div id="dShortDescription">
                                                <label class="control-label">Short Description</label>
                                                <input type="text" name="Name" class="form-control" id="txtShortDesc" isrequired="1" data-error="Please enter Short Description." errorspan="sShortDescription" divcontainer="dShortDescription" defaultvalue="" />
                                                <span class="help-block hide error" id="sShortDescription">Please Enter Short Description</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div id="dUsage">
                                                <label class="control-label">Usage</label>
                                                <input type="text" name="Usage" class="form-control" id="txtUsage" isrequired="1" errorspan="sUsage" divcontainer="dUsage"
                                                       defaultvalue="" />
                                                <span class="help-block hide error" id="sUsage">Please Enter Usage</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div id="dMRP">
                                                <label class="control-label">MRP</label>
                                                <input type="text" name="txtMRP" class="form-control numberbox" id="txtMRP" isrequired="1" errorspan="sMRP" divcontainer="dMRP"
                                                       defaultvalue="" />
                                                <span class="help-block hide error" id="sMRP">Please Enter MRP</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div id="dOfferPrice">
                                                <label class="control-label">Offer Price</label>
                                                <input type="text" name="OfferPrice" class="form-control numberbox" id="txtOfferPrice" isrequired="1" errorspan="sOfferPrice" divcontainer="dOfferPrice"
                                                       defaultvalue="" />
                                                <span class="help-block hide error" id="sOfferPrice">Please Enter Offer Price</span>
                                            </div>
                                        </div>

                                        <div class="form-group hide">
                                            <div id="dPhotoUrl">
                                                <label class="control-label">Image URL</label>
                                                <input type="text" name="Name" class="form-control" id="txtImageUrl" isrequired="0" data-error="Please enter Photo Url." errorspan="sPhotoUrl" divcontainer="dPhotoUrl"
                                                       defaultvalue="" />
                                                <span class="help-block hide error" id="sPhotoUrl">Please Enter Image Url</span>
                                                <a class="" href="javascript:void(0)" onclick="FileMngrDialog('Select Banner');"><i class="fa fa-folder-open-o fa-1x" id="Dialog"></i></a>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label">Photo</label>
                                            <div>
                                                <img id="imgPhoto" />
                                            </div>
                                            <div>
                                                <input type="file" name="updPhoto" id="updPhoto" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div id="dCategoryId">
                                                <label class="control-label">Category</label>
                                                <select type="text" name="CategoryId" class="form-control" id="ddlCategoryId" isrequired="1" data-error="Please enter Category." errorspan="sCategoryId" divcontainer="dCategoryId"
                                                        defaultvalue="0" />
                                                <span class="help-block hide error" id="sCategoryId">Please Select Category</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-8">
                                        <div id="dLongDescription">
                                            <label class="control-label">Long Description</label>
                                            <textarea rows="4" cols="40" class="form-control" id="txtLongDesc" errorspan="sLongDescription" data-error="Please enter Long Description." divcontainer="dLongDescription"
                                                      defaultvalue="">
                                    </textarea>
                                            <span class="help-block hide error" id="sLongDescription">Please Enter Long Description</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div><div class="clearfix">&nbsp;</div>
                                <div class="form-group actionBar">
                                    <input class="btn crud-submit btn-success" type="button" id="btnSave" value="Save" />
                                    <input id="btnCancel" class="btn crud-submit btn-danger" type="button" value="Cancel" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row hide">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div>&nbsp;</div>
                    <div id='jqxWidget'>
                        <div id="productJqxgrid"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div id="dialogFileMngr" hidden="hidden" style="overflow:hidden" title="Media Library">
    <iframe id="iFrmFileManager" class="" height="100%" width="100%" style="border: 0px"></iframe>
</div>

<script src="~/distadmin/js/AppAdmin/Masters/ProductMaster.js?_=@DateTime.Now.Ticks"></script>
<script src="/areas/admin/assets/Plugins/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('txtLongDesc');
</script>
