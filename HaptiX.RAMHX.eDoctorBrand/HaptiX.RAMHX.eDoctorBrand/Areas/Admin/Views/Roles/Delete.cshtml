@model RAMHX.CMS.DataAccess.AspNetRole

@{
    ViewBag.Title = "Delete";
}
<section class="content-header">
    <h1>
        Users
        <small>Maintain Users</small>
    </h1>

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Administration</a></li>
        <li><a href="#">Users</a></li>
    </ol>
</section>

    @if (Model.Name.ToLower() != "admin")
    {
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            @*<h2>Roles</h2>*@
                            <h4>Delete Role</h4>
                            <h3>Are you sure you want to delete this "@Html.DisplayFor(model => model.Name)" role?</h3>
                            <div>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" class="btn btn-default" /> |
                                    </div>
                                }
                            </div>
                            <div>&nbsp;</div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    else
    {
        <h3>You cannot delete default/Built in roles - "@Html.DisplayFor(model => model.Name)" role.</h3>
    }

