@model IEnumerable<RAMHX.CMS.DataAccess.AspNetRole>

@{
    ViewBag.Title = "Roles";
}
<section class="content-header">
    <h1>
        Users
        <small>Maintain Users</small>
    </h1>

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Administration</a></li>
        <li><a href="#">Users</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    @*<h2>Roles</h2>*@
                    <p>
                        @Html.ActionLink("Create Role", "Create", null, new { @id = "lnkcreatepage" })
                    </p>
                    <table class="table" id="tblPageRoles">
                        <thead>
                            <tr>
                                <th class="hide thSelect">
                                    Select
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th class="thaction"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                                <tr>
                                    <td class="hide tdChkBox">
                                        @Html.CheckBox("checked", false, new { name = "assignChkBx", id = item.Id, value = item.Id, @class = "ckbox" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td class="tdaction">
                                        @if (item.Name.ToLower() != "admin")
                                        {
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })

                                            <span>|</span>

                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="form-group">
                        <input type="button" value="Save" class="btn btn-success hide" id="savedetail" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/Areas/Admin/Assets/js/Page.Roles.js"></script>
}



