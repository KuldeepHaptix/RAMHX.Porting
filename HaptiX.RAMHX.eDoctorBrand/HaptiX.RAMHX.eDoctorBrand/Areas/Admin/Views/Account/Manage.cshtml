@using RAMHX.CMS.Web.Areas.Admin.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Reset Password";
    ManageUserViewModel mu = new ManageUserViewModel();
    mu.id = @ViewBag.Userid;
}
<section class="content-header">
    <h1>
        Users
        <small>Maintain Users</small>
    </h1>

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Administration</a></li>
        <li><a href="#">Users</a></li>
    </ol>
</section>


<p class="text-success">@ViewBag.StatusMessage</p>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                   @* <h2>@ViewBag.Title.</h2>*@

                    @if (ViewBag.HasLocalPassword)
                    {
                        @Html.Partial("_ChangePasswordPartial", mu)
                    }
                    else
                    {
                        @Html.Partial("_SetPasswordPartial")
                    }

                    @*<section id="externalLogins">
                            @Html.Action("RemoveAccountList")
                            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })
                        </section>*@
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
