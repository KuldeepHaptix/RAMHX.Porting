@model IEnumerable<RAMHX.CMS.Web.Areas.Admin.Models.SiteTemplate>

<section class="content-header">
    <h1>
        Site Templates
        <small>Maintain Site Templates</small>
    </h1>

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Administration</a></li>
        <li><a href="#">Site Templates</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4>Site Templates</h4>
                    <div class="container">
                        <div class="row">
                            @foreach (var item in Model)
            {
                                <div class="col-lg-4 ">
                                    <div class="bordered">
                                        <img src="@item.ThumbUrl" class="bordered" />
                                    </div>
                                    <div>
                                        @item.Name
                                    </div>
                                    <div>
                                        @item.PackagePath
                                    </div>
                                    <div>
                                        <button class="btn btn-success install" data-template-name="@item.Name">Install</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="/Areas/Admin/Assets/js/sitetemplate.js"></script>
}
